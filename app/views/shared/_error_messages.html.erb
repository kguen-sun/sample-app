<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= "#{t ".alert"} #{pluralize object.errors.size, t(".alert_error")}." %>
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
